---
import "../styles/global.css";
import palette from "../../assets/palette/dark.json";
import NavBar from "../components/NavBar.astro";

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/icon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Google+Sans+Code:ital,wght@0,300..800;1,300..800&display=swap"
      rel="stylesheet"
    />

    <title>Dynasty Theme - {title}</title>
  </head>
  <body class="bg-(--n950) font-mono text-(--n200)">
    <NavBar />
    <slot />
  </body>
</html>

<style
  define:vars={{
    n050: palette.n050,
    n100: palette.n100,
    n200: palette.n200,
    n300: palette.n300,
    n700: palette.n700,
    n800: palette.n800,
    n900: palette.n900,
    n950: palette.n950,

    dyPrimary: palette.dyPrimary,
    dyPrimaryDark: palette.dyPrimaryDark,

    syntaxType: palette.syntaxType,
    syntaxOperator: palette.syntaxOperator,
    syntaxKeyword: palette.syntaxKeyword,
    syntaxSpecial: palette.syntaxSpecial,
    syntaxFunction: palette.syntaxFunction,
    syntaxString: palette.syntaxString,
    syntaxNumber: palette.syntaxNumber,
  }}
></style>
