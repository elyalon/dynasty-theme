---
import DynastyIcon from "../../../../_figma/icon-angular.svg";
---

<div class="grid h-[85vh] place-items-center">
  <div class="flex flex-col gap-10 pt-14 max-md:gap-8">
    <div class="flex flex-col gap-2">
      <div class="flex items-center justify-center gap-6 px-4 max-md:gap-4">
        <DynastyIcon
          width={100}
          height={100}
          class="shrink-0 -translate-y-2 select-none max-md:size-16 max-md:-translate-y-1"
        />
        <div class="text-nowrap">
          <h1 class="text-[72px] leading-none text-(--n100) max-md:text-[56px]">
            Dynasty
          </h1>
        </div>
      </div>
      <div
        class="flex justify-center gap-3 *:size-11 *:rounded-xl max-md:gap-2 max-md:*:size-9"
      >
        <div class="bg-(--syntaxKeyword)"></div>
        <div class="bg-(--syntaxOperator)"></div>
        <div class="bg-(--syntaxType)"></div>
        <div class="bg-(--syntaxNumber)"></div>
        <div class="bg-(--syntaxString)"></div>
        <div class="bg-(--syntaxFunction)"></div>
        <div class="bg-(--syntaxSpecial)"></div>
      </div>
    </div>
    <div class="text-center text-lg text-(--n300) max-md:text-base">
      A high-contrast VS Code theme<br />designed for clarity.
    </div>
  </div>
</div>
