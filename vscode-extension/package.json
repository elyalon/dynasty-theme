{
  "name": "dynasty-theme",
  "displayName": "Dynasty Theme",
  "icon": "./icon.jpg",
  "description": "A high-contrast color theme designed for clarity.",
  "version": "0.4.1",
  "publisher": "elyalon",
  "bugs": {
    "url": "https://github.com/elyalon/dynasty-theme/issues"
  },
  "homepage": "https://dynasty.ely.al",
  "engines": {
    "vscode": "^1.105.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elyalon/dynasty-theme"
  },
  "categories": [
    "Themes"
  ],
  "galleryBanner": {
    "color": "#090B11",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dynasty-theme.activateLicense",
        "title": "Dynasty Theme: Activate License"
      },
      {
        "command": "dynasty-theme.showLicenseStatus",
        "title": "Dynasty Theme: Show License Status"
      }
    ],
    "themes": [
      {
        "label": "Dynasty Theme Ocean",
        "id": "Dynasty Theme (Default)",
        "uiTheme": "vs-dark",
        "path": "./themes/DynastyOcean-color-theme.json"
      },
      {
        "label": "Dynasty Theme Violet",
        "id": "Dynasty Theme (violet)",
        "uiTheme": "vs-dark",
        "path": "./themes/DynastyViolet-color-theme.json"
      },
      {
        "label": "Dynasty Theme Ocean Light",
        "id": "Dynasty Theme (ocean+light)",
        "uiTheme": "vs",
        "path": "./themes/DynastyOceanLight-color-theme.json"
      },
      {
        "label": "Dynasty Theme Violet Light",
        "id": "Dynasty Theme (violet+light)",
        "uiTheme": "vs",
        "path": "./themes/DynastyVioletLight-color-theme.json"
      }
    ]
  },
  "devDependencies": {
    "@types/chroma-js": "^3.1.2",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.105.0",
    "@types/webpack-env": "^1.18.8",
    "@vscode/vsce": "^3.7.1",
    "chroma-js": "^3.1.2",
    "eslint": "^9.39.1",
    "prettier": "^3.7.3",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  }
}
